{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "pswtf",
    "version": "1.0.0"
  },
  "build": {
    "beforeBuildCommand": "bash src-tauri/scripts/cleanup-stale-dmg-mounts.sh pswtf",
    "beforeDevCommand": "",
    "withGlobalTauri": true,
    "devPath": "../ui",
    "distDir": "../ui"
  },
  "tauri": {
    "windows": [
      {
        "title": "pswtf",
        "width": 1440,
        "height": 920,
        "minWidth": 1080,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["app", "dmg"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.pswtf.app"
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost"
    },
    "allowlist": {
      "all": false
    }
  }
}
